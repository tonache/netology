<?php

$a = array (
"Africa" => array ("Phacochoerus africanus", "Aepyceros melampus", "Okapia johnstoni", "Leptailurus serval"),
"Eurasia" => array ("Lepus timidus", "Haliaeetus albicilla", "Crocidura suaveolens"),
"North America" => array ("Gulo gulo", "Tyrannosauria"),
"South America" => array ("Crocodylus intermedius", "Mustela felipei", "Vicugna pacos"),
"Australia" => array ("Litoria raniformis", "Macropus"),
"Antarctica" => array ("Globicephala melas")
);

echo $a["Eurasia"][1]; // найдем одно животное


foreach($a as $cont => $stats) // выведем всех животных с привязкой к континентам обитания
{
echo "<h1>$cont</h1>";
   foreach($stats as $k =>$v)
    {
     echo "<p>$v<br/></p>";
    }
}



